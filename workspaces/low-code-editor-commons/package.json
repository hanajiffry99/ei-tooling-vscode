{
  "name": "@wso2-ei/low-code-editor-commons",
  "version": "1.0.0",
  "description": "",
  "files": [
    "lib"
  ],
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "author": "wso2",
  "license": "ISC",
  "dependencies": {
    "vscode-languageserver-protocol": "^3.17.0-next.16"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "tslint": "^6.1.3",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "prebuild": "pnpm run lint",
    "build": "tsc --pretty && pnpm run copy:assets",
    "copy:assets": "copyfiles -u 1 src/**/*.scss src/**/*.svg src/**/*.css src/**/*.png src/**/*.txt src/**/*.json lib/",
    "clean": "rimraf lib/",
    "clean:nm": "rimraf node_modules",
    "watch": "tsc --pretty --watch",
    "lint": "tslint --project .",
    "lint:fix": "tslint --fix --project .",
    "setGITOut": "if [ $CI = 'true' ]; then echo \"built-$(basename \"$PWD\")=true\" >> $GITHUB_OUTPUT; fi"
  }
}
